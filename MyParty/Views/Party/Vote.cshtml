@model MyParty.ViewModels.ParticipantViewModel



@using (Html.BeginForm("Save", "Party", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group row">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-5">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="custom-control custom-switch">
        @Html.CheckBoxFor(model => model.Attend, new { @class = "custom-control-input" })
        @Html.LabelFor(model => model.Attend, new { @class = "custom-control-label" })
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.ArrivalDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
            @Html.EditorFor(model => model.ArrivalDate)
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.Reason, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-sm-5">
            @Html.EditorFor(model => model.Reason, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    @Html.HiddenFor(model => model.Id)

    <input type="submit" value="Save" class="btn btn-outline-primary" />
}

